<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/size_15_sp"
    android:background="@drawable/home_screen_background_gradient_clr"
    tools:context=".ui.support.SupportFragment">

    <TextView
        android:id="@+id/textView95"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_15_sp"
        android:text="@string/support"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        style="@style/CustomTitleContentTextViewStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textView97"/>

    <TextView
        android:id="@+id/textView97"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Do you have questions about your yoga practice? Don't hesitate to reach out to our experienced instructors for guidance and support!"
        android:textColor="@color/black"
        android:textSize="@dimen/size_13_sp"
        style="@style/CustomNormalContentTextViewStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView95"
        app:layout_constraintBottom_toTopOf="@id/imageView39"/>

    <ImageView
        android:id="@+id/imageView39"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        android:minWidth="200dp"
        android:src="@drawable/support_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView97"
        app:layout_constraintBottom_toTopOf="@id/whatsapp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/whatsapp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="40dp"
        android:drawablePadding="10dp"
        android:paddingVertical="12dp"
        android:text="@string/connect"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        app:iconGravity="textStart"
        app:icon="@drawable/ic_whatsapp"
        app:iconTint="@color/white"
        android:textAllCaps="false"
        android:visibility="visible"
        android:drawableTint="@color/white"
        app:backgroundTint="@color/eco_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView39"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <include
        android:id="@+id/statusIndicatorLayout"
        layout="@layout/layout_status_indicator" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.scorepsc">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <application
        android:name="com.scorepsc.MainApp"
        android:allowBackup="false"
        android:icon="@mipmap/new_tt_icon"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/new_tt_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Future"
        tools:ignore="AllowBackup"
        tools:replace="android:allowBackup">
        <activity
            android:exported="true"
            android:name="com.scorepsc.ui.SplashScreenActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:exported="true"
            android:name="com.scorepsc.MainActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:exported="true"
            android:theme="@style/noAnimTheme"
            android:name="com.scorepsc.ui.signin.onBoarding.OnBoardWelcomeFirstActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">
        </activity>
        <activity
            android:exported="true"
            android:theme="@style/noAnimTheme"
            android:name="com.scorepsc.ui.signin.onBoarding.OnBoardWelcomeSecondActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:exported="true"
            android:name="com.scorepsc.PlayerActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden" />

        <activity
            android:exported="true"
            android:theme="@style/noAnimTheme"
            android:name="com.scorepsc.OnBoardActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <activity android:name="com.scorepsc.ImageZoomActivity" android:exported="true"/>

        <service
            android:name="com.scorepsc.receiver.TTFirebaseCloudMessageReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>